{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "warmane-pvp-analytics-api:CrawlerTriggerFunction",
      "invokeTarget": {
        "target": "template",
        "templatePath": "${workspaceFolder}/template.yaml",
        "logicalId": "CrawlerTriggerFunction"
      },
      "lambda": {
        "payload": {
          "path": "events/event.json"
        },
        "environmentVariables": {}
      }
    },
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "Debug Get Matches",
      "invokeTarget": {
        "target": "template",
        "templatePath": "${workspaceFolder}/template.yaml",
        "logicalId": "WarmaneApiFunction"
      },
      "lambda": {
        "payload": {
          "path": "events/cors.json"
        }
      },
      "sam": {
        "containerBuild": true,
        // "buildArguments": [
        //   "--parallel",
        //   "--cached"
        // ],
        "localArguments": ["-n${workspaceFolder}${pathSeparator}.env.json"]
      }
    },
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "Debug Crawler Function",
      "invokeTarget": {
        "target": "template",
        "templatePath": "${workspaceFolder}/template.yaml",
        "logicalId": "CrawlerFunction"
      },
      "lambda": {
        "payload": {
          "path": "events/crawl.json"
        }
        // "environmentVariables": {
        //   "TABLE_NAME": "${env:TABLE_NAME}"
        // }
      },
      "sam": {
        "containerBuild": true,
        "buildArguments": ["--parallel", "--cached"],
        "localArguments": ["-n${workspaceFolder}${pathSeparator}.env.json"]
      }
    }
  ]
}
